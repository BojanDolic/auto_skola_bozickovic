<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/red"/>


    <TextView
        android:id="@+id/autoskola_tekst_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto škola Božičković"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>


   <com.google.android.material.button.MaterialButton
        android:id="@+id/onama_btn"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="O nama"
        app:icon="@drawable/person_icon"
        app:layout_constraintTop_toBottomOf="@id/autoskola_tekst_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/testovi_btn"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Testovi"
        app:icon="@drawable/book_icon"
        app:layout_constraintTop_toBottomOf="@id/onama_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kontakt_btn"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Kontakt"
        app:icon="@drawable/phone_icon"
        app:layout_constraintTop_toBottomOf="@id/testovi_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintVertical_chainStyle="spread_inside"/>




</androidx.constraintlayout.widget.ConstraintLayout>